{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [
      "src/client",
      "src/server"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}